{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usersgroup</h1>
    <table>
        <tbody>
            <tr>
                <th>Nazwa grupy:</th>
                <td>{{ usersGroup.name }}</td>
            </tr>
        </tbody>
    </table>
    <div>Uczesnicy grupy</div>
    {%if usersGroup.persons | length > 0 %}
        <ol>
            {%for person in usersGroup.persons %}
                <li>
                    <p><a href="{{path('person_show', {'id': person.id})}}">{{person.name ~ ' ' ~ person.surname}}</a></p>
                </li>
            {% endfor%}
        </ol>
    {%else %}
        <p> Brak os√≥b w tej  grupiee </p>
    {%  endif %}
    <ul>
        <li>
            <a href="{{ path('usersgroup_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}

